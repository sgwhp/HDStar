<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center" >

        <ImageView
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_collapse" />

        <ImageView
            android:id="@+id/sticky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sticky" />

        <TextView
            android:id="@+id/free_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

<!--     <ImageView
        android:id="@+id/second_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icons"
        android:layout_below="@+id/first_class"
        android:src="@drawable/bd_h264" /> -->

    <TextView
        android:id="@+id/torrent_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/torrent_title"
        android:layout_below="@+id/torrent_title"
        android:layout_toLeftOf="@+id/view_torrent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:drawableLeft="@drawable/notallowed" />

    <TextView
        android:id="@+id/torrent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/view_torrent"
        android:layout_toRightOf="@+id/icons"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:drawableLeft="@drawable/c_movie" />

<!-- 
    <ImageView
        android:id="@+id/first_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icons"
        android:src="@drawable/c_movie" /> -->

    <org.hdstar.widget.LTAButton
        android:id="@+id/view_torrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_forward_bg_sel"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>
